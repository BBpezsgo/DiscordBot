{
    "compilerOptions": {
        "target": "es2021",
        "module": "es2022",
        "lib": ["es2021"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./source",
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "include": [ "source" ],
    "exclude": ["dist", "node_modules"]
}