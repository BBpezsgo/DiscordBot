<script>
    window.onclick = function (event) {
        for (let i = 0; i < document.getElementsByClassName('modal').length; i++) {
            const modal = document.getElementsByClassName('modal')[i]
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    }
</script>
<script>
    var origCols = "182,55%,*"

    /** @param {Element} sender */
    function ToggleHelpPanel(sender) {
        if (origCols != null) { showFrame(sender) }
        else { hideFrame(sender) }
    }

    /** @param {Element} sender */
    function hideFrame(sender) {
        sender.textContent = '<'
        const frameset = document.getElementById("frameSet")
        origCols = frameset.cols
        frameset.cols = "182,55%"
    }

    /** @param {Element} sender */
    function showFrame(sender) {
        sender.textContent = '>'
        const frameset = document.getElementById("frameSet")
        frameset.cols = origCols
        origCols = null
    }
</script>

<script>
    setInterval(() => {
        var xmlHttp = new XMLHttpRequest()
        xmlHttp.open("GET", '/title', false)
        xmlHttp.send(null)
        document.title = xmlHttp.responseText
    }, 1000)
</script>

