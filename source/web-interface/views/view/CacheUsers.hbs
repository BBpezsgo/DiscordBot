<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="pragma" content="no-cache">
	<link href="/styles/css-vars.css" rel="stylesheet" type="text/css">
    <link href="/styles/css_main.css" rel="stylesheet" type="text/css">

    <script language="javascript" src="/scripts/commonNew.js" type="text/javascript"></script>

    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        .material-icons {
            font-size: 1.2em;
            transform: translate(0px, 3px);
            user-select: none;
        }

        a:hover .material-icons::after {
            content: '';
            display: block;
            width: 1em;
            height: 1px;
            background-color: currentColor;
            transform: translateY(-2px);
        }

        img.badge {
            display: inline-block;
            transform: translateY(4px);
        }

        .channel-menuitem {
	        height: 42px;
        }

        .channel-menuitem:not(.channel-menuitem-selected) .btn-view-channel {
            opacity: 0%;
        }

        .channel-menuitem:not(.channel-menuitem-selected):hover .btn-view-channel {
            opacity: 50%;
        }

        .channel-menuitem:not(:hover) .btn-fetch {
            display: none;
        }
    </style>
</head>

<body class="ctxpanel">
	<div id="context-menubar">
        <div id="server-panel">
            <style>
                #server-panel table, #server-panel tr, #server-panel td {
                    border: 0px;
                    margin: 0px;
                    padding: 0px;
                }
            </style>
            <table cellspacing="0" style="position: relative; top: 10px; left: 8px;">
                <tr>
                    <td style="color: #f3f4f5; font-weight: 700; font-size: 14px;">
                        Direct Messages
                    </td>
                </tr>
            </table>
        </div>
		<div id="context-menubar-content" style="overflow-x: hidden;">
            {{#each users}}
            <table class="channel-menuitem" onclick="event.target.style.pointerEvents='none';event.target.style.opacity='50%';document.getElementById('view-user-{{this.id}}').querySelector('input[type=submit]').click()">
                <tr>
                    <td style="width:32px">
                        {{#if avatarUrlMedium}}
                        <div class="tooltip">
                            <img src="{{this.avatarUrlMedium}}" width="32" height="32" title="Avatar" style="border-radius: 16px;">
                            <span class="tooltiptext">
                                <img src="{{this.avatarUrlBig}}">
                            </span>
                        </div>      
                        {{else}}
                        <img src="{{this.defaultAvatarUrl}}" width="32" height="32" title="Default avatar" style="border-radius: 16px;">
                        {{/if}}
                    </td>
                    <td style="font-size: 14px; font-weight: 600; max-width: 70px; overflow: hidden;">
                        <span title="Username">{{this.username}}</span>{{#if this.discriminator}}<span style="color: #999;" title="Discriminator">#{{this.discriminator}}</span>{{/if}}
                        
                        {{#if bot}}<span class="tag">BOT</span>{{/if}}
                        {{#if system}}<span class="tag">System</span>{{/if}}
                        
                        {{#if archived}}
                            <img src="/images/archived.png" width="12" height="12" title="Loaded from user-exported data" style="transform: translateY(2px); opacity: 50%;">
                        {{/if}}

                        {{#if flags.HypeSquadOnlineHouse1}}
                        <span class="user-badge">
                            <img src="https://static.wikia.nocookie.net/discord/images/3/31/Hypesquad_bravery_badge.png">
                        </span>
                        {{/if}}

                        {{#if flags.HypeSquadOnlineHouse2}}
                        <span class="user-badge">
                            <img src="https://static.wikia.nocookie.net/discord/images/2/27/Hypesquad_brilliance_badge.png">
                        </span>
                        {{/if}}

                        {{#if flags.HypeSquadOnlineHouse3}}
                        <span class="user-badge">
                            <img src="https://static.wikia.nocookie.net/discord/images/c/ca/Hypesquad_balance_badge.png">
                        </span>
                        {{/if}}
                        
                        {{#if flags.Staff}}
                        <span class="user-badge">
                            <img src="/dcbot/images/userBadges/Discord-staff.png">
                        </span>
                        {{/if}}
                        
                        {{#if flags.BugHunterLevel1}}
                        <span class="user-badge">
                            <img src="/dcbot/images/userBadges/Bug_hunter_badge.png">
                        </span>
                        {{/if}}
                        
                        {{#if flags.BugHunterLevel2}}
                        <span class="user-badge">
                            <img src="/dcbot/images/userBadges/Bug_buster_badge.png">
                        </span>
                        {{/if}}
                        
                        {{#if flags.CertifiedModerator}}
                        <span class="user-badge">
                            <img src="/dcbot/images/userBadges/Discord_Certified_Moderator.png">
                        </span>
                        {{/if}}
                        
                        {{#if flags.Partner}}
                        <span class="user-badge">
                            <img src="/dcbot/images/userBadges/DiscordPartnerBadge.svg">
                        </span>
                        {{/if}}
                        
                        {{#if false}}
                        <span class="user-badge">
                            <img src="/dcbot/images/userBadges/Early_supporter_badge.png">
                        </span>
                        {{/if}}
                        
                        {{#if false}}
                        <span class="user-badge">
                            <img src="/dcbot/images/userBadges/HypeSquad_Event_Badge.png">
                        </span>
                        {{/if}}
                        
                        {{#if false}}
                        <span class="user-badge">
                            <img src="/dcbot/images/userBadges/New_badge.svg">
                        </span>
                        {{/if}}
                        
                        {{#if false}}
                        <span class="user-badge">
                            <img src="/dcbot/images/userBadges/Nitro_badge.png">
                        </span>
                        {{/if}}
                        
                        {{#if false}}
                        <span class="user-badge">
                            <img src="/dcbot/images/userBadges/SupportsCommandsBadge.png">
                        </span>
                        {{/if}}
                        
                        {{#if VerifiedDeveloper}}
                        <span class="user-badge">
                            <img src="/dcbot/images/userBadges/Verified_developer_badge.png">
                        </span>
                        {{/if}}

                        {{#if cache}}
                        <img src="/images/offline.png" width="12" height="12" title="From Cache" alt="Cache Icon" style="transform: translateY(2px); opacity: 50%;">
                        {{/if}}

                        {{#if haveDatabase}}
                        <img src="/images/database2.svg" width="12" height="12" title="Has Database" alt="Database Icon" style="transform: translateY(2px); opacity: 50%;">
                        {{/if}}
                    </td>
                    <td style="width: 24px;">
                        <button class="btn-fetch" onclick="Post('/User/Fetch?id={{id}}', event, () => { Reload() })" title="Fetch"></button>
                    </td>
                    <td style="display: none;">
                        <form action="/dcbot/view/UserMessages/Search" method="get" id="view-user-{{this.id}}"
                            style="margin: 0">
                            <input type="text" name="id" value="{{this.id}}">
                            <input type="submit" value="View">
                        </form>
                    </td>
                </tr>
            </table>
            {{/each}}
		</div>
		<div id="bot-status-panel">
			<iframe src="/dcbot/BotStatusPanel" style="width:100%;height:100%;border:0px;"></iframe>
		</div>
	</div>
	<div id="content" style="position:relative">

        <div class="container loading-effect">
            <h2>Fetch User</h2>
            <form action="/User/Fetch" method="post" style="margin: 0; display: inline-block;"
                onsubmit="
                    event.preventDefault()
                    Post('/User/Fetch?id=' + document.getElementById('fetch-user-id').value, event, () => {
                        Reload()
                    }, 'fetch-user-error')
                ">
                <input type="text" name="id" value="{{this.id}}" id="fetch-user-id">
                <input type="submit" value="Fetch">
            </form>
            <p style="color: #b32d2d;" id="fetch-user-error"></p>
        </div>

        {{#if errorMessage}}
        <div class="container loading-effect">
            <h2>Error</h2>
            <p style="color: #f00; font-weight: bold;">
                {{errorMessage}}
            </p>
        </div>
        {{/if}}

    </div>

    <script src="/scripts/functions.js"></script>
    <script>function Reload(){if(location.href.includes('#noReload')){location.reload()}else{location.href+='#noReload';location.reload()};}</script>
    <script src="/scripts/loadEffect.js"></script>
</body>

</html>